# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=stellarwave_user
DB_PASSWORD=stellarwave_password
DB_NAME=stellarwave

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=24h

# Stellar Network Configuration
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_ISSUER_SECRET_KEY=your_stellar_secret_key_here
STELLAR_ISSUER_PUBLIC_KEY=your_stellar_public_key_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Sentry Configuration (Error Tracking)
# Leave empty to disable Sentry
SENTRY_DSN=https://your-key@sentry.io/project-id
ENABLE_SENTRY=false

# Monitoring Features
# Health check endpoints are always enabled at:
# - /api/health (general)
# - /api/health/live (liveness probe)
# - /api/health/ready (readiness probe)
# - /api/health/database (database check)
# - /api/health/stellar (Stellar network check)
#
# Prometheus metrics endpoint is always enabled at:
# - /api/metrics
#
# Structured logging with correlation IDs is always enabled
